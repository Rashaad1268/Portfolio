{
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "on"
    },
    "scss.lint.unknownAtRules": "ignore",
    "editor.formatOnSave": true,
    "prettier.configPath": "../frontend-svelte/.prettierrc",

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
    }
}
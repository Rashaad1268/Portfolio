---
import BaseHead from "../components/BaseHead.astro";
import NavBar from "../components/navbar.svelte";
import Footer from "../components/footer.astro";
import BackgroundGrid from "../components/backgroundGrid.svelte";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Ping from "../components/ping.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="">
    <NavBar client:load />

    <div class="relative flex flex-col items- h-full">
      <BackgroundGrid client:load />

      <section class="absolute items-center justify-center -translate-y-32">
        <h1 class="font-monocraft text-center title-text name-gradient !my-4">
          Rashaad is the name
        </h1>
        <h2 class="text-2xl font-monocraft">
          May or may not be known as <span
            class="font-doodle text-green-500 hover-underline">Slim Shady</span
          >
           or <span class="font-doodle hover-underline text-green-500"
            >Batman</span
          >
        </h2>
      </section>
    </div>

    <section>
      <h1 class="title-text w-min hover-underline">Projects</h1>
    </section>

    <Footer />
    <style>
      section {
        @apply flex flex-col w-full pt-[var(--navbar-height)]
               px-5 sm:px-10 lg:px-20 min-h-[var(--max-h)];
      }
      .title-text {
        @apply my-10 text-5xl font-semibold;
      }

      .name-gradient {
        @apply bg-gradient-to-br from-green-400 to-emerald-600 via-green-600  bg-clip-text text-transparent;
      }

      .hover-underline {
        background-image: linear-gradient(
          90deg,
          theme("colors.green.600"),
          green
        );
        background-size: 0% 6px;
        background-repeat: no-repeat;
        background-position: left bottom;

        transition: background-size 400ms ease;
      }

      @media screen(sm) {
        .hover-underline:hover {
          background-size: 100% 3px;
        }
      }
    </style>
  </body>
</html>

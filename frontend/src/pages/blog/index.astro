    <body>
        <NavBar client:load />
        <main class="flex justify-center min-h-screen pb-32">
            <section class="max-w-screen-md m-4">
                <h1
                    class="text-4xl sm:text-5xl font-bold mb-8 sm:mb-10 mt-4 text-"
                >
                    Articles
                </h1>
                <ul class="flex flex-col gap-2">
                    {
                        posts.map((post, idx) => (
                            <li>
                                <a
                                    href={`/blog/${post.slug}/`}
                                    class="hover:underline grid grid-cols-4 items-center sm:gap-12 md:gap-32 w-full"
                                >
                                    <h4 class="text-xl font-semibold col-span-3">
                                        {idx+1}. {post.data.title}
                                    </h4>
                                    <p class="date col-span-1">
                                        <FormattedDate
                                            date={post.data.pubDate}
                                        />
                                    </p>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </section>
        </main>
